    <script>
        //FOR SCROLLING FUNCTIONING OF LINKS USING EASING PLUGIN
        $(function () {
            $('.navbar a').bind('click', function (event) {
                var $anchor = $(this);
                $('html, body').stop().animate({
                    scrollTop: $($anchor.attr('href')).offset().top
                }, 1500, 'easeInOutExpo');
                event.preventDefault();
            });
        });
    </script>
